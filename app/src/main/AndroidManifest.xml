<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yt.greenarchitectapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDeliveryAppUi"
        tools:targetApi="31">
        <activity
            android:name="com.yt.greenarchitectapp.screens.geolocation.LocationActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yt.greenarchitectapp.screens.activities.CartActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yt.greenarchitectapp.screens.activities.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yt.greenarchitectapp.screens.activities.RedActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yt.greenarchitectapp.screens.activities.GreyActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yt.greenarchitectapp.screens.activities.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodDeliveryAppUi" />
        <activity
            android:name="com.yt.greenarchitectapp.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FoodDeliveryAppUi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>